source 'https://rubygems.org'

# ruby
ruby '2.1.2'

# rails
gem 'rails', '4.1.7'

# env
gem 'dotenv-rails'

# db
gem 'pg'
gem 'active_model_serializers'

# users
gem 'devise'
gem 'omniauth-github'
gem "github_api"

# front end
gem 'sass-rails', '~> 4.0.3'
gem 'uglifier', '>= 1.3.0'
gem 'jquery-rails'

# pipeline
gem 'slim-rails'

# markdown
gem 'github-markup'
gem 'redcarpet'

# Emails
gem 'premailer-rails'
gem 'nokogiri'

group :development do
  gem 'spring-commands-rspec'
end

group :development, :test do
  gem 'factory_girl_rails'
  gem 'faker'
end

group :test do
  gem 'rspec-rails', '~> 3.0.0'
  gem 'vcr'
  gem 'webmock'
end

gem 'rails_12factor', group: :production
